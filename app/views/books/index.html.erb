<p id= "notice">
  <%= flash[:notice] %>
</p>

<h1>Books</h1>

<table class="teble">
    <thead>
        <th>
          Title
        </th>
        <th>
          Body
        </th>
        <th colspan= "3">
        </th>
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.body %>
        </td>
        <td>
          <%= link_to 'Show', book_path(book.id) %>
          <%= link_to 'Edit', edit_book_path(book.id) %>
          <%= link_to 'Destroy', book_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>


<h2 class= "Newbook">
New book
</h2>


<% if @book.errors.any? %>
  <div class= "errors">
    <h2 class="error"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li>
      <%= "▪︎" + message %>
      </li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book,url: '/books',method: :post do |f| %>
  <label>Title</label>
  <div class= "text-box">
    <%= f.text_field :title %>
  </div>

  <label>body</label>
  <div class= "text-box">
   <%= f.text_area :body %>
  </div>
  
  <div class= "botan">
  <%= f.submit 'Create Book' %>
  </div>
<% end %>